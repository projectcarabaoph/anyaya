{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./server/src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "server/src",
    "paths": {
      "@/configs/*": ["configs/*"],
      "@/controllers/*": ["controllers/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/routes/*": ["routes/*"],
      "@/utils/*": ["utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./server/src/types"  
    ]
  },
  "include": ["server/**/*"]
}
